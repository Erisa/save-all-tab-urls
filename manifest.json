{
  "manifest_version": 3,
  "name": "Save All Tab URLs",
  "description": "Get the raw URLs of all your open tabs!",
  "version": "0.2.0",

  "background": {
    "service_worker": "background.js",
    "type": "module",
    "scripts": ["background.js"]
  },

  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png",
    "256": "icons/logo-256.png"
  },

  "action": {
      "default_icon": {
        "48": "icons/logo-48.png",
        "96": "icons/logo-96.png",
        "256": "icons/logo-256.png"
      }
  },

  "permissions": [
    "tabs"
  ]
}
